<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsa.lsamobileapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name="com.lsa.lsamobileapplication.thanks" />
        <activity android:name="com.lsa.lsamobileapplication.select_days" />
        <activity android:name="com.lsa.lsamobileapplication.main_fragment_activity" />
        <activity android:name="com.lsa.lsamobileapplication.forget_password" />
        <activity android:name="com.lsa.lsamobileapplication.Record" />
        <activity android:name="com.lsa.lsamobileapplication.Login" />
        <activity android:name="com.lsa.lsamobileapplication.Registeration" />
        <activity android:name="com.lsa.lsamobileapplication.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.lsa.lsamobileapplication.FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

`</manifest>